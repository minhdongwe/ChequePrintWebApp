@model List<ChequeHistory>

<h3>Cheque History</h3>
<a href="/Cheque/ExportToExcel" class="btn btn-success mb-3">📥 Download Excel</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Personal Number</th>
            <th>Name</th>
            <th>Bank</th>
            <th>Bank Account Number</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                <td>@item.PersonalNumber</td>
                <td>@item.Name</td>
                <td>@item.BankName</td>
                <td>@item.BankAccountNumber</td>
                <td>@item.Amount.ToString("N2")</td>
            </tr>
        }
    </tbody>
</table>

@model List<PrintPosition>

<h3>Adjust Field Positions (cm)</h3>

<form method="post">
    <table class="table">
        <tr>
            <th>Field</th>
            <th>Top</th>
            <th>Left</th>
            <th>Right</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].FieldName <input type="hidden" name="[@i].FieldName" value="@Model[i].FieldName" /></td>
                <td><input type="text" name="[@i].Top" value="@Model[i].Top" class="form-control" /></td>
                <td><input type="text" name="[@i].Left" value="@Model[i].Left" class="form-control" /></td>
                <td><input type="text" name="[@i].Right" value="@Model[i].Right" class="form-control" /></td>
            </tr>
        }
    </table>
    <button type="submit" class="btn btn-success">Save Settings</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}
